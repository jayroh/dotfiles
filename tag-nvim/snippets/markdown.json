{
  "front-matter": {
    "prefix": ["front"],
    "body": [
      "---",
      "title: ${1:Title}",
      "category: ${2:category}",
      "author: Joel",
      "layout: post",
      "permalink: /2021/11/26/${3:slug}.html",
      "alias: /2021/11/26/$3",
      "---"
    ],
    "description": "Markdown front-matter"
  },
  "a tag": {
    "prefix": "a",
    "body": [
      "[${1:link text}](${2:https://})"
    ]
  },
  "img tag": {
    "prefix": "img",
    "body": [
      "![${1:alt text}](${2})"
    ]
  }
}
