#!/bin/bash
# Checkout branch using fzf

set -e

if [[ $# == 0 ]]; then
   branch=$(git branch -a --color=always | \
       sed 's/remotes\/origin\///' | \
       sort | \
       uniq | \
       fzf --reverse --ansi --tac | \
       sed -E -e 's/^\*?[ \t]*//')
else
  branch="$1"
fi

git checkout "$branch"
